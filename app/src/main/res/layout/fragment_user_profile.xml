<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#B6A9E6"
    android:orientation="vertical"
    tools:context=".fragments.UserProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profileUserProfilePicVIew"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher_background"
            tools:src="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="250px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profileNickNameView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:text="User Nickname" />

            <TextView
                android:id="@+id/profileUserBioView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:text="User Bio" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/changeImageButton"
            android:layout_width="72dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:baselineAligned="false"
            android:text="Button"
            android:textColorLink="#00FFFFFF"
            android:textSize="8sp"
            app:icon="@android:drawable/ic_menu_gallery"
            app:iconSize="24dp"
            app:strokeColor="#FFFFFF" />

        <Button
            android:id="@+id/goToGamesListbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Games"
            android:textAlignment="viewStart" />

        <Button
            android:id="@+id/toChats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="chats" />
    </LinearLayout>

</LinearLayout>